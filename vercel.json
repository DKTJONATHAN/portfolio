{
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": false,
  "public": "news-website",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/sitemap",
      "destination": "/sitemap.xml"
    },
    {
      "source": "/robots",
      "destination": "/robots.txt"
    }
  ]
} 