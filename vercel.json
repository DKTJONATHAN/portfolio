{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "content/articles.json",
      "use": "@vercel/static"
    },
    {
      "src": "content/articles/*.html",
      "use": "@vercel/static"
    },
    {
      "src": "images/*",
      "use": "@vercel/static"
    },
    {
      "src": "*.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    // 1. API routes (highest priority)
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    
    // 2. JSON data route (new)
    {
      "src": "/content/articles.json",
      "dest": "/content/articles.json",
      "headers": {
        "Cache-Control": "public, max-age=3600"
      }
    },
    
    // 3. Image assets (your working config)
    {
      "src": "/images/(.*)",
      "dest": "/images/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    
    // 4. Clean article URLs
    {
      "src": "/articles/([^/.]+)",
      "dest": "/content/articles/$1.html"
    },
    
    // 5. Direct content access
    {
      "src": "/content/articles/(.*)\\.html",
      "dest": "/content/articles/$1.html"
    },
    
    // 6. SPA fallback (lowest priority)
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}