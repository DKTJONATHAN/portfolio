{
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    // 1. XML file rewrites (high priority)
    {
      "source": "/sitemap.xml",
      "destination": "/api/sitemap"
    },
    {
      "source": "/rss.xml",
      "destination": "/api/rss"
    },
    
    // 2. Your other existing rules (keep these!)
    {
      "source": "/sitemap",
      "destination": "/sitemap.xml"
    },
    {
      "source": "/robots",
      "destination": "/robots.txt"
    },
    {
      "source": "/:path*",
      "destination": "/:path*.html"
    },
    {
      "source": "/:path*",
      "destination": "/:path*/index.html"
    }
  ]
}