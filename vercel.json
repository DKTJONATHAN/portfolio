{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "content/articles/*.html",
      "use": "@vercel/static"
    },
    {
      "src": "images/*",
      "use": "@vercel/static"
    },
    {
      "src": "*.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    // 1. API routes (first priority)
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    
    // 2. Image assets (keep your working config)
    {
      "src": "/images/(.*)",
      "dest": "/images/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    
    // 3. New clean article URLs
    {
      "src": "/articles/([^/.]+)",
      "dest": "/content/articles/$1.html"
    },
    
    // 4. Direct content access (fallback)
    {
      "src": "/content/articles/(.*)\\.html",
      "dest": "/content/articles/$1.html"
    },
    
    // 5. SPA fallback (last priority)
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/images/.*\\.(jpg|jpeg|png|gif|webp|svg)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}