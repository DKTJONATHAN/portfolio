{
  "cleanUrls": true,
  "trailingSlash": false,
  "headers": [
    {
      "source": "/sitemap.xml",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400, stale-while-revalidate=3600"
        },
        {
          "key": "Content-Type",
          "value": "application/xml; charset=utf-8"
        }
      ]
    }
  ],
  "rewrites": [
    // 1. High priority XML rewrites
    {
      "source": "/sitemap.xml",
      "destination": "/api/sitemap"
    },
    {
      "source": "/rss.xml",
      "destination": "/api/rss"
    },

    // 2. Convenience redirects (lower priority)
    {
      "source": "/sitemap",
      "destination": "/sitemap.xml"
    },
    {
      "source": "/robots",
      "destination": "/robots.txt"
    },

    // 3. Existing HTML rules (keep these last)
    {
      "source": "/:path*",
      "destination": "/:path*.html",
      "has": [
        {
          "type": "header",
          "key": "accept",
          "value": "text/html"
        }
      ]
    },
    {
      "source": "/:path*/",
      "destination": "/:path*/index.html"
    }
  ]
}